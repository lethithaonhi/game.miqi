<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.englishmiqi.Game1.ActivityGame11">


    <TextView
        android:id="@+id/score_game1"
        android:layout_width="match_parent"
        android:textColor="#006633"
        android:textSize="28dp"
        android:textStyle="bold"
        android:text="Score: 3"
        android:gravity="center"
        android:layout_height="60dp" />
    <ImageView
        android:layout_below="@id/score_game1"
        android:id="@+id/imagequestion"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        ></ImageView>
    <TextView
        android:id="@+id/chuthich_game1"
        android:textStyle="bold"
        android:textColor="#006633"
        android:layout_above="@id/gridviewbanphim"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <GridView
        android:layout_marginBottom="10dp"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:layout_centerHorizontal="true"
        android:columnWidth="40dp"
        android:padding="10dp"
        android:verticalSpacing="4dp"
        android:id="@+id/gridviewanswer"
        android:layout_below="@id/imagequestion"
        android:layout_width="match_parent"
        android:layout_height="120dp"></GridView>
    <GridView
        android:layout_marginBottom="20dp"
        android:layout_below="@id/gridviewanswer"
        android:layout_alignParentBottom="true"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp"
        android:layout_centerHorizontal="true"
        android:columnWidth="40dp"
        android:padding="2dp"
        android:id="@+id/gridviewbanphim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></GridView>

</RelativeLayout>


