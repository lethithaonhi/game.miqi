<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.englishmiqi.NguPhap.GioiTu">

    <TextView
        android:id="@+id/score_gioitu"
        android:text="0/20"
        android:textSize="16dp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_height="30dp"
        android:layout_width="50dp">
    </TextView>>
    <TextView
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#6633cc"
        android:text=""
        android:id="@+id/cau_gioitu"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:padding="4dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/stroke_violet"
        android:layout_below="@id/cau_gioitu"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_show_gioitu"
        android:text=""
        android:textColor="#6633cc"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </TextView>


    <RelativeLayout

        android:id="@+id/layoutbutton_gioitu"
        android:layout_below="@id/text_show_gioitu"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <Button
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="A"
            android:textSize="12dp"
            android:background="@drawable/but_a"
            android:id="@+id/button1_gioitu"
            android:layout_height="40dp"
            android:layout_width="150dp">
        </Button>
        <Button
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="B"
            android:textSize="12dp"
            android:background="@drawable/but_b"
            android:layout_alignParentRight="true"
            android:id="@+id/button2_gioitu"
            android:layout_height="40dp"
            android:layout_width="150dp">
        </Button>
        <Button
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:text="C"
            android:textSize="12dp"
            android:background="@drawable/but_c"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:id="@+id/button3_gioitu"
            android:layout_height="40dp"
            android:layout_width="150dp">
        </Button>
        <Button
            android:padding="3dp"
            android:layout_marginRight="10dp"
            android:text="D"
            android:textSize="12dp"
            android:background="@drawable/but_d"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/button4_gioitu"
            android:layout_height="40dp"
            android:layout_width="150dp">
        </Button>
    </RelativeLayout>
    <TextView
        android:id="@+id/textgoiy_gioitu"
        android:textSize="14dp"
        android:textColor="#6633cc"
        android:layout_below="@id/goiy_gioitu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>>
    <TextView
        android:id="@+id/goiy_gioitu"
        android:layout_below="@id/layoutbutton_gioitu"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Gợi ý"
        android:textColor="#996633"
        android:textSize="20dp"
        android:layout_width="70dp">
    </TextView>
</RelativeLayout>
