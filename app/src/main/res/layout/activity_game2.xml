<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.englishmiqi.Game2.ActivityGame2">
    <GridView
     android:layout_marginTop="30dp"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp"
        android:layout_centerHorizontal="true"
        android:columnWidth="40dp"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>>
    <TextView
        android:id="@+id/duthua"
        android:text="CHỌN TỪ DƯ THỪA"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#3366cc"
        android:textSize="30dp"
        android:layout_below="@id/question"
        android:layout_width="match_parent"
        android:layout_height="40dp"></TextView>

    <TextView
        android:id="@+id/scoregame2"
        android:layout_centerInParent="true"
        android:textSize="50dp"
        android:textColor="#6633ff"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/duthua"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
