<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.englishmiqi.Game3.ActivityGame3">
    <TextView
    android:layout_below="@id/cau"
    android:layout_marginTop="40dp"
    android:id="@+id/text_demso_game3"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:textSize="25dp"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="true"
  > </TextView>>
<TextView
android:id="@+id/scoreee"
android:text="0/50"
android:textSize="24dp"
android:textColor="@android:color/holo_red_dark"
android:textAlignment="center"
android:layout_alignParentRight="true"
android:layout_height="50dp"
android:layout_width="80dp">
</TextView>>
    <TextView
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#6633cc"
        android:text=""
        android:id="@+id/cau"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
<TextView
    android:background="@drawable/stroke_violet"
    android:layout_below="@id/cau"
android:layout_marginBottom="20dp"
    android:padding="5dp"
android:id="@+id/text_show"
android:text=""
android:textColor="#6633cc"
android:textSize="24dp"
    android:gravity="center"
android:textStyle="bold"
android:layout_height="wrap_content"
android:layout_width="match_parent">
</TextView>


<RelativeLayout

android:id="@+id/layoutbutton"
android:layout_below="@id/text_show"
android:layout_width="match_parent"
android:layout_height="150dp">
<Button
    android:padding="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="A"
    android:textSize="12dp"
    android:background="@drawable/button2"
    android:id="@+id/button1"
    android:layout_height="60dp"
    android:layout_width="140dp">
</Button>
<Button
    android:padding="3dp"
    android:layout_marginRight="10dp"
android:layout_marginTop="10dp"
    android:text="B"
    android:textSize="12dp"
    android:background="@drawable/button2"
    android:layout_alignParentRight="true"
    android:id="@+id/button2"
    android:layout_height="60dp"
    android:layout_width="140dp">
</Button>
<Button
    android:padding="3dp"
    android:layout_marginLeft="10dp"
    android:text="C"
    android:textSize="12dp"
    android:background="@drawable/button2"
 android:layout_alignParentBottom="true"
    android:layout_marginBottom="5dp"
    android:id="@+id/button3"
    android:layout_height="60dp"
    android:layout_width="140dp">
</Button>
<Button
    android:padding="3dp"
    android:layout_marginRight="10dp"
    android:text="D"
    android:textSize="12dp"
    android:background="@drawable/button2"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="5dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/button4"
    android:layout_height="60dp"
    android:layout_width="140dp">
</Button>
</RelativeLayout>
<ImageView
    android:id="@+id/hengio"
    android:background="@drawable/baothuc"
    android:layout_width="150dp"
    android:layout_below="@id/layoutbutton"
    android:layout_centerInParent="true"
    android:layout_marginTop="30dp"
    android:layout_height="150dp" />
    <TextView
        android:id="@+id/demgio"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text=""
       android:layout_below="@id/layoutbutton"
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
</RelativeLayout>
