<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.englishmiqi.NguPhap.GiaoTiep">

    <TextView
        android:id="@+id/score_giaotiep"
        android:text="0/50"
        android:textSize="18dp"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_alignParentRight="true"
        android:layout_height="30dp"
        android:layout_width="50dp">
    </TextView>>
    <TextView
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#6633cc"
        android:text=""
        android:id="@+id/cau_giaotiep"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:padding="4dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/stroke_violet"
        android:layout_below="@id/cau_giaotiep"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_show_giaotiep"
        android:text=""
        android:textColor="#6633cc"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </TextView>


    <RelativeLayout
        android:id="@+id/layoutbutton_giaotiep"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignLeft="@+id/text_show_giaotiep"
        android:layout_alignStart="@+id/text_show_giaotiep"
        android:layout_below="@+id/text_show_giaotiep">

        <Button
            android:id="@+id/button1_giaotiep"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/but_a"
            android:padding="10dp"
            android:textSize="13dp"></Button>

        <Button
            android:id="@+id/button2_giaotiep"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_below="@id/button1_giaotiep"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_b"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="B"
            android:textSize="13dp"></Button>

        <Button
            android:id="@+id/button3_giaotiep"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/button2_giaotiep"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_c"
            android:text="C"
            android:textSize="13dp"></Button>

        <Button
            android:id="@+id/button4_giaotiep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/button3_giaotiep"
            android:layout_alignStart="@+id/button3_giaotiep"
            android:layout_below="@+id/button3_giaotiep"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:background="@drawable/but_d"
            android:padding="10dp"
            android:paddingRight="20dp"
            android:text="D"
            android:textSize="13dp"></Button>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_goiy_giaotiep"
        android:textSize="14dp"
        android:textColor="#6633cc"
        android:layout_below="@id/goiy_giaotiep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>>
    <TextView
        android:id="@+id/goiy_giaotiep"
        android:layout_below="@id/layoutbutton_giaotiep"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Gợi ý"
        android:textColor="#996633"
        android:textSize="20dp"
        android:layout_width="70dp">
    </TextView>
</RelativeLayout>
